<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ListView">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorBackGround</item>

    </style>


    <style name="cardTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">16sp</item>
        <item name="android:layout_marginEnd">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="cardSubTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="SelectionTreePlaceHolderImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>
    <style name="EmptyPlaceHolderText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="CenteredPane">
        <item name="android:layout_width">match_parent</item>
    </style>




</resources>